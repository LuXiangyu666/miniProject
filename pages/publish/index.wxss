.topButton {
  display: flex;
  height: 80rpx;
  margin-top: 5rpx;
}
.topButton .cancel {
  flex: 3;
}
.topButton .cancel view {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  width: 130rpx;
  font-size: 38rpx;
  font-weight: 10rpx;
}
.topButton .draft {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  border-radius: 30rpx;
  border: 1rpx solid rgba(153, 153, 153, 0.822);
  margin: 4rpx 12rpx;
}
.topButton .publish {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  background-color: #fffb00;
  border-radius: 30rpx;
  margin: 4rpx 10rpx;
}
.describe {
  margin: 30rpx 10rpx;
}
.describe .placeholder {
  font-size: 30rpx;
  color: #c5c5c5;
}
.upload_img {
  width: 200rpx;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
  background-color: #f3f3f3;
  font-size: 30rpx;
}
.logoinfo {
  display: flex;
  margin: 20rpx;
}
.logoinfo image {
  width: 200rpx;
  height: 200rpx;
}
.location_container {
  margin: 50rpx 20rpx;
  background-color: #f5f5f5;
  width: 350rpx;
  height: 80rpx;
  font-size: 28rpx;
  text-overflow: ellipsis;
  display: flex;
  align-items: center;
  border-radius: 30rpx;
}
.location_container .logo {
  margin: 0rpx 20rpx;
}
.location_container .location {
  width: 400rpx;
  height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #8a8a8a;
}
.bottom {
  display: flex;
  flex-direction: column;
  margin: 20rpx 0rpx 10rpx 20rpx;
}
.bottom .price {
  flex: 1;
  display: flex;
  margin-bottom: 20rpx;
}
.bottom .price .logo {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 70rpx;
}
.bottom .price .price_text {
  flex: 4;
  display: flex;
  align-items: center;
  height: 70rpx;
  font-size: 35rpx;
  font-weight: bolder;
  margin-left: 15rpx;
}
.bottom .price .price_input {
  flex: 12;
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
  height: 70rpx;
}
.bottom .price .price_input .RAM {
  font-size: 38rpx;
  margin: 0rpx 15rpx;
  color: red;
}
.bottom .price .price_input .input_color {
  color: red;
}
.bottom .price .price_input .input {
  height: 60rpx;
  border: 1rpx solid grey;
  border-radius: 15rpx;
  width: 200rpx;
  font-size: 30rpx;
  font-weight: bolder;
  text-align: center;
  margin-right: 10rpx;
}
.bottom .price .price_input .input .placeholder {
  font-size: 29rpx;
  color: #9c9c9c;
  text-align: center;
}
.bottom .trading_mode {
  flex: 1;
  display: flex;
}
.bottom .trading_mode .logo {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 70rpx;
}
.bottom .trading_mode .mode_text {
  flex: 4;
  display: flex;
  align-items: center;
  height: 70rpx;
  font-size: 35rpx;
  font-weight: bolder;
  margin-left: 18rpx;
}
.bottom .trading_mode .mode_choose {
  flex: 12;
  display: flex;
  flex-direction: row-reverse;
}
.bottom .trading_mode .mode_choose .arrowhead {
  display: flex;
  align-items: center;
  height: 70rpx;
  font-size: 40rpx;
  margin: 0 20rpx;
}
.bottom .trading_mode .mode_choose .mode {
  height: 70rpx;
  font-size: 35rpx;
  color: #919191;
  display: flex;
  align-items: center;
}
