.index_hotProduct .product_title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--themeColor);
  padding: 20rpx;
  background-color: #f1efef;
}
.index_hotProduct .product_list {
  display: flex;
  flex-wrap: wrap;
}
.index_hotProduct .product_list .product_detail {
  width: 46%;
  text-align: center;
  margin: 15rpx;
}
.index_hotProduct .product_list .product_detail .n_img image {
  width: 100%;
  background-color: #F5F5F5;
}
.index_hotProduct .product_list .product_detail .n_img .msg {
  display: flex;
}
.index_hotProduct .product_list .product_detail .n_img .msg .product_name {
  flex: 4;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  text-align: right;
  margin-right: 20rpx;
}
.index_hotProduct .product_list .product_detail .n_img .msg .product_price {
  display: flex;
  flex: 3;
  color: var(--themeColor);
  justify-content: left;
}
.index_hotProduct .product_list .product_detail .button {
  display: flex;
}
.index_hotProduct .product_list .product_detail .button .btn_state {
  flex: 1;
  width: 200rpx;
}
.index_hotProduct .product_list .product_detail .button .n_tousu {
  flex: 1;
}
